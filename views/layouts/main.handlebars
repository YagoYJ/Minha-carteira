<body>
    <!-- Barra de menu -->
    {{#if user}}
    {{>header}}
    {{else}}

    {{/if}}


    <div class="container mt-4">

        <!-- Mostra a mensagem de erro caso tenha: -->
        {{#each errors}}

        <div class="alert alert-danger">{{text}}</div>

        {{else}}

        {{/each}}

        {{#if error}}
