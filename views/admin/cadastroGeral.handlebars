<div class="pagNewTransaction">

    <h2>Adicionar transação do tipo "{{type_transaction}}":</h2>
    <hr>
    <div class="card mt-4 mb-4">
        <div class="card-body">
            <form action="/admin/transaction/new" method="POST">
                <label for="action_transaction">Ação:</label>
                <input type="text" class="form-control mb-3" name="action_transaction" placeholder="Ação da transação"
                    required>
                <label for="value_transaction">Valor:</label>
                <input type="number" class="form-control mb-3" name="value_transaction" placeholder="R$ 100.00" required>
                <label for="origin_transaction">Origem:</label>
                <input type="text" class="form-control mb-3" name="origin_transaction" placeholder="Origem da transação"
                    required>
                <label for="destiny_transaction">Destino</label>
                <input type="text" class="form-control mb-3" name="destiny_transaction"
                    placeholder="Destino da transação" required>
                <label for="date_transaction">Data:</label>
                <input type="date" class="form-control mb-3" name="date_transaction" placeholder="Data da transação"
                    required>
                <input type="hidden" name="type_transaction" value={{type_transaction}}>


                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Salvar</button>
            </form>
        </div>
    </div>


</div>